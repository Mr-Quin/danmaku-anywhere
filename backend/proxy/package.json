{
  "name": "@danmaku-anywhere/proxy",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "author": "Mr-Quin",
  "repository": "https://github.com/Mr-Quin/danmaku-anywhere",
  "license": "MIT",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "dev": "wrangler dev -e staging",
    "dev:remote": "pnpm dev -e staging --remote",
    "test": "vitest",
    "lint": "biome check --fix",
    "lint:ci": "biome ci",
    "type-check:local": "tsgo --noEmit",
    "cf-typegen": "wrangler types",
    "wrangler": "wrangler",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:prod": "wrangler deploy --env production",
    "drizzle": "drizzle-kit",
    "drizzle:generate": "drizzle-kit generate --config drizzle.config.ts",
    "drizzle:push:prod": "drizzle-kit push --config drizzle.config.ts",
    "better-auth:generate": "pnpx @better-auth/cli@latest generate",
    "db:migrate:local": "pnpm wrangler d1 migrations apply danmaku-anywhere-db-staging --env staging --local",
    "db:migrate:staging": "pnpm wrangler d1 migrations apply danmaku-anywhere-db-staging --env staging",
    "db:migrate:prod": "pnpm wrangler d1 migrations apply danmaku-anywhere-db --env production"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@cloudflare/vitest-pool-workers": "^0.10.10",
    "@types/node": "^24.10.1",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3",
    "vitest": "3.2.4",
    "wrangler": "^4.63.0"
  },
  "dependencies": {
    "@danmaku-anywhere/integration-policy": "workspace:*",
    "@google/generative-ai": "^0.24.1",
    "@hono/zod-validator": "^0.7.5",
    "@sentry/cloudflare": "^10.26.0",
    "better-auth": "^1.4.18",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.10.6",
    "zod": "^4.3.5"
  }
}
