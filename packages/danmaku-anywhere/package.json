{
  "name": "@mr-quin/danmaku-anywhere",
  "version": "0.16.1",
  "private": true,
  "description": "Browser extension for danmaku-anywhere",
  "keywords": [],
  "author": "Mr-Quin",
  "repository": "https://github.com/Mr-Quin/danmaku-anywhere",
  "license": "AGPL-3.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:firefox": "TARGET_BROWSER=firefox pnpm run dev",
    "build": "tsc && vite build --outDir build --emptyOutDir",
    "build:firefox": "TARGET_BROWSER=firefox pnpm run build",
    "test": "vitest",
    "preview": "vite preview",
    "lint": "tsc && eslint --ext .js,.jsx,.ts,.tsx --fix .",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "package": "node ./scripts/package.js",
    "package:firefox": "TARGET_BROWSER=firefox pnpm run package",
    "tsc": "tsc"
  },
  "dependencies": {
    "@danmaku-anywhere/danmaku-converter": "workspace:*",
    "@danmaku-anywhere/danmaku-engine": "workspace:*",
    "@danmaku-anywhere/danmaku-provider": "workspace:*",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/roboto": "^5.1.1",
    "@hookform/resolvers": "^3.9.1",
    "@mui/icons-material": "^6.3.0",
    "@mui/lab": "6.0.0-beta.21",
    "@mui/material": "^6.3.0",
    "@mui/system": "^6.3.0",
    "@tanstack/react-query": "^5.62.11",
    "@tanstack/react-query-devtools": "^5.62.11",
    "@tanstack/react-virtual": "^3.11.2",
    "@use-gesture/react": "^10.3.1",
    "dexie": "^4.0.10",
    "i18next": "^24.2.0",
    "immer": "^10.1.1",
    "pinyin-pro": "^3.26.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-hook-form": "^7.54.2",
    "react-hotkeys-hook": "^4.6.1",
    "react-i18next": "^15.4.0",
    "react-markdown": "^9.0.1",
    "react-router": "^7.1.1",
    "ts-pattern": "^5.6.0",
    "urlpattern-polyfill": "^10.0.0",
    "zod": "^3.24.1",
    "zustand": "5.0.2"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.26",
    "@types/chrome": "^0.0.287",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/wicg-file-system-access": "^2023.10.5",
    "@vitejs/plugin-react": "^4.3.4",
    "vite": "^5.4.11",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^2.1.8"
  }
}
