{
  "name": "@danmaku-anywhere/danmaku-provider",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "author": "Mr-Quin",
  "repository": "https://github.com/Mr-Quin/danmaku-anywhere",
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./ddp": {
      "types": "./src/providers/ddp/index.d.ts",
      "default": "./src/providers/ddp/index.js"
    },
    "./bilibili": {
      "types": "./src/providers/bilibili/index.d.ts",
      "default": "./src/providers/bilibili/index.js"
    },
    "./tencent": {
      "types": "./src/providers/tencent/index.d.ts",
      "default": "./src/providers/tencent/index.js"
    },
    "./maccms": {
      "types": "./src/providers/macCms/index.d.ts",
      "default": "./src/providers/macCms/index.js"
    },
    "./genAi": {
      "types": "./src/providers/genAi/index.d.ts",
      "default": "./src/providers/genAi/index.js"
    },
    "./kazumi": {
      "types": "./src/providers/kazumi/index.d.ts",
      "default": "./src/providers/kazumi/index.js"
    },
    "./config": {
      "types": "./src/providers/config/index.d.ts",
      "default": "./src/providers/config/index.js"
    },
    "./files": {
      "types": "./src/providers/files/index.d.ts",
      "default": "./src/providers/files/index.js"
    }
  },
  "scripts": {
    "test": "vitest",
    "protobuf:compile": "pbjs -t static-module -w es6 -o src/protobuf/protobuf.js src/protobuf/definition/bilibili.dm.proto && pbts -o src/protobuf/protobuf.d.ts src/protobuf/protobuf.js",
    "build": "pnpm protobuf:compile && tsgo",
    "lint": "tsgo && biome check --fix",
    "lint:ci": "biome ci",
    "type-check": "tsgo --noEmit",
    "dev": "tsgo -w",
    "openapi-ts": "openapi-ts"
  },
  "dependencies": {
    "@danmaku-anywhere/danmaku-converter": "workspace:*",
    "@danmaku-anywhere/result": "workspace:*",
    "protobufjs": "^7.5.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.88.0",
    "copyfiles": "^2.4.1",
    "protobufjs-cli": "^1.1.3",
    "vitest": "^4.0.13"
  }
}
